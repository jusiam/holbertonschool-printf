#include "main.h"

/**
 * _putchar - Write character.
 * @c: The character to print.
 * Return: If success 1.
 * If error - -1 .
 */

int _putchar(char c)
{
	return (write(1, &c, 1));
}

/**
 * _strlen - Check string length passed in function.
 * @s: Parameter receiving string.
 * ptr: contain the s value.
 * Return: The string length.
 */

int _strlen(char *s)
{
	char *ptr = s;

	while (*ptr != '\0')
	{
		ptr++;
	}

	return (ptr - s);

}
